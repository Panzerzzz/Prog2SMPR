                            android:layout_marginTop="120dp"
                            android:text="A:" />

                        <Spinner
                            android:id="@+id/spndeAlmacenamiento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60dp"
                            android:layout_marginTop="60dp"
                            android:entries="@array/spnAlmacenamiento" />

                        <Spinner
                            android:id="@+id/spnAalmacenamiento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60dp"
                            android:layout_marginTop="120dp"
                            android:entries="@array/spnAlmacenamiento"/>

                        <EditText
                            android:id="@+id/txtCantidadAlmacenamiento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/spnAalmacenamiento"
                            android:layout_marginTop="40dp"
                            android:hint="Cantidad a convertir" />

                        <Button
                            android:id="@+id/btnCalcularAlmacenamiento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtCantidadAlmacenamiento"
                            android:layout_marginTop="40dp"
                            android:text="CONVERTIR" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tabMasa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/tabPeso"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lblDePeso"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="60dp"
