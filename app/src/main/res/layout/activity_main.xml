                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtCantidadPeso"
                            android:layout_marginTop="40dp"
                            android:text="CONVERTIR" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tabTiempo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/tabdeTiempo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lblDeTiempo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="60dp"
                            android:text="DE:" />

                        <TextView
                            android:id="@+id/lblATiempo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="120dp"
                            android:text="A:" />

                        <Spinner
                            android:id="@+id/spndeDeTiempo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60dp"
                            android:layout_marginTop="60dp"
                            android:entries="@array/spnTiempo" />

                        <Spinner
                            android:id="@+id/spnATiempo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
