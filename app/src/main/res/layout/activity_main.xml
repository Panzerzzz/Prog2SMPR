                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lblDeMonedas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="60dp"
                            android:text="DE:" />

                        <TextView
                            android:id="@+id/lblMonedas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="120dp"
                            android:text="A:" />

                        <Spinner
                            android:id="@+id/spndeMonedas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60dp"
                            android:layout_marginTop="60dp"
                            android:entries="@array/spnMoneda" />

                        <Spinner
                            android:id="@+id/spnAmonedas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60dp"
                            android:layout_marginTop="120dp"
                            android:entries="@array/spnMoneda"/>

                        <EditText
                            android:id="@+id/txtCantidadMonedas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/spnAmonedas"
                            android:layout_marginTop="40dp"
                            android:hint="Cantidad a convertir" />

                        <Button
                            android:id="@+id/btnCalcularMoneda"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtCantidadMonedas"
                            android:layout_marginTop="40dp"
                            android:text="CONVERTIR" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabAlmacenamiento"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
